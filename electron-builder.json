{
  "appId": "com.electron.app",
  "productName": "vite-electron-template",
  "directories": {
    "output": "dist"
  },
  "icon": "icon/icon.ico",
  "publish": {
    "provider": "github",
    "owner": "wxsub",
    "repo": "vite-electron-template"
  },
  "electronDownload": {
    "cache": "./cache",
    "mirror": "https://npmmirror.com/mirrors/electron/"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "shortcutName": "vite-electron-template",
    "installerIcon": "icon/icon.ico",
    "uninstallerIcon": "icon/icon.ico",
    "installerHeaderIcon": "icon/icon.ico"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": ["snap"],
    "icon": "icon/icon.svg"
  },
  "mac": {
    "icon": "icon/icon.icns"
  },
  "files": [
    {
      "from": "build/main",
      "to": "main",
      "filter": ["**/*"]
    },
    {
      "from": "build/renderer",
      "to": "renderer",
      "filter": ["**/*"]
    },
    {
      "from": "src/main/static",
      "to": "static",
      "filter": ["**/*"]
    },
    "!build",
    "!src",
    "!cache",
    "!lib",
    "!dist",
    "!scripts",
    "!XMagic",
    "!.git",
    "!.idea"
  ]
}
